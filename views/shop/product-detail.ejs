<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/detail.css">
    </head>

    <body>
        <%- include('../includes/navigation2.ejs') %>
        <div class="container-fluid">
                <div class="main">
                </div>
                <div class="card shadow-lg border rounded-lg">
                    <div class="clip"></div>
                  <div class="row">
                    <div class="col p-5">
                        <div class="row">
                            <img src="/<%= product.imageUrl %>" width="500" height="550" alt="">
                          </div>
                    </div>
            
            
                    <div class="col p-5">
                      <h3><%= product.title %> <br>
                       <small class="text-muted">by <%= product.author %> (<%= product.edition %> Edition)</small>
                        </h3>
                        <button class="btn btn-primary my-3"><i class="fas fa-rupee-sign fa-1x"></i> <%= product.price %></button>
            
                        <!-- <p class="w-75">Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas maiores asperiores beatae quam natus aperiam</p> -->
            
                        <div class="p-4 w-75 border border-right-0 border-left-0">
                          <div class="row py-2">
                          <div class="col-4 text-muted">Language</div>
                          <div class="col-8"><%= product.language %></div>
                        </div>
            
                        <div class="row py-2">
                          <div class="col-4 text-muted">Publisher</div>
                          <div class="col-8"><%= product.publisher %></div>
                        </div>
                          <div class="row py-2">
                          <div class="col-4 text-muted">ISBN</div>
                          <div class="col-8"><%= product.isbn %></div>
                        </div>
                          <div class="row py-2">
                          <div class="col-4 text-muted">Pages</div>
                          <div class="col-8"><%= product.pages %></div>
                        </div>
                          <div class="row py-2">
                          <div class="col-4 text-muted">Condition</div>
                          <div class="col-8"><%= product.condition %></div>
                        </div>
                        </div>
            
                        <h5 class="my-2 text-muted">Owner</h5>
                        <p><%= product.firstname %> <br> Email - <%= product.email %> <br> Mobile - +91 <%= product.mobile %> <br> Address - <%= product.address %> </p>

                        <% if (isAuthenticated) { %>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        <% } %>
                    </div>
                  </div>
                </div>
              </div>



            
        
        <%- include('../includes/end.ejs') %>