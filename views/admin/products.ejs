<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation2.ejs') %>
        <div class="bg"></div>
            <main class="">
                <% if (prods.length > 0) { %>
                    <div class="grid mt-5">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                
                                <div class="card__image">
                                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" height="300">
                                </div>

                                <div class="card-body">
                                        <h4 class="card-title"><%= product.title %> - (<%= product.category %>)</h4>
                                        <div class="row">
                                            <div class="col">
                                                    <p class="lead">Author : <%= product.author %></p>
            
                                            </div>
                                           
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <p class="lead">Only At <span class="btn btn-warning"><i class="fas fa-rupee-sign"></i> <%= product.price %></span>
                                                </p> 
                                            </div>
                                        </div>
                                </div>


                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn btn-success">Edit</a>
                                        <input type="hidden" value="<%= product._id %>" name="productId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn btn-primary" type="button" onclick="deleteProduct(this)">Sold</button>
                                        <button class="btn btn-danger" type="button" onclick="deleteProduct(this)">Delete</button>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1 class="text-center text-light mt-5">No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>