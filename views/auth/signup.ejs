<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <div class="login">

   <%- include('../includes/navigation.ejs') %>
   <div class="bg">
    </div>
    <main class="d-flex justify-content-center align-items-lg-center">
        <div class="data border rounded-lg w-50 h-50 p-3 bg-warning ">
        
        <h1 class="display-4 text-light py-4 mx-auto d-flex justify-content-center">SignUp Form</h1>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form pt-2 w-100" action="/signup" method="POST" novalidate>
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'form-control invalid' : 'form-control' %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
                <label for="password" class="mt-2">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'form-control invalid' : 'form-control' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
                <label for="confirmPassword" class="mt-2">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'form-control invalid' : 'form-control' %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn mt-4 mb-2 btn-primary btn-block" type="submit">Signup</button>
        </form>
        </div>
    </main>
</div>

<%- include('../includes/end.ejs') %>