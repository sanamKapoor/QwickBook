<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <div class="bg">
    </div>
    <main class="d-flex justify-content-center align-items-lg-center">
        <div class="data border rounded-lg w-50 h-50 p-3 bg-warning ">
                <h1 class="display-4 text-light py-4 mx-auto d-flex justify-content-center">Login Form</h1>

        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>

        <form class="login-form pt-2 w-100" action="/login" method="POST">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'form-control invalid' : 'form-control' %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
                <label for="password" class="mt-2">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'form-control invalid' : 'form-control' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-block btn-primary mt-4" type="submit">Login</button>
        </form>
        <div class="centered mt-3">
                <a href="/reset">Reset Password</a>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>