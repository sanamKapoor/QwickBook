<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
    <div class="bg"></div>
    <main class="pt-5">
        
        <form class="login-form border rounded-lg p-4 w-25 mt-5" action="/reset" method="POST">
            <h1 class=" text-light py-4 mx-auto d-flex justify-content-center">Reset Password</h1>

            <% if (errorMessage) { %>
                <div class="user-message user-message--error"><%= errorMessage %></div>
            <% } %>
                <label for="email" class="text-light">Enter email</label>
                <input type="email" name="email" class="form-control" id="email">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-block mt-3 btn-outline-light" type="submit">Reset Password</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>